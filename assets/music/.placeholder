<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>FGM Music Player</title>

<style>
    body {
        margin: 0;
        background: #000;
        color: #ffd95e;
        font-family: Arial, sans-serif;
        text-align: center;
    }

    /* TOP NAV BAR */
    nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 14px 0;
        background: rgba(0, 0, 0, 0.65);
        backdrop-filter: blur(6px);
        border-bottom: 1px solid rgba(197, 157, 41, 0.35);
        z-index: 9999;
        text-align: center;
        animation: navFadeIn 1.4s ease;
    }
    nav a {
        margin: 0 18px;
        color: #ffd95e;
        text-decoration: none;
        font-weight: bold;
        font-size: 1rem;
        transition: 0.3s;
    }
    nav a:hover {
        color: white;
        text-shadow: 0 0 8px gold;
    }

    @keyframes navFadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    /* PAGE SPACING UNDER NAV */
    .page-gap {
        height: 80px;
    }

    /* MUSIC PLAYER CARD */
    .player-box {
        margin: 60px auto;
        padding: 30px;
        width: 90%;
        max-width: 420px;
        background: rgba(255, 215, 0, 0.09);
        border: 1px solid #c59d29;
        border-radius: 16px;
        box-shadow: 0 0 18px rgba(255, 215, 0, 0.25);
    }

    /* Rotating Coin */
    .coin {
        width: 140px;
        height: 140px;
        margin: auto;
        filter: drop-shadow(0 0 16px gold);
        transition: 0.3s;
        animation: none;
    }

    /* Rotate when playing */
    .spin {
        animation: coin-spin 4s linear infinite;
    }

    @keyframes coin-spin {
        0%   { transform: rotateY(0deg); }
        100% { transform: rotateY(360deg); }
    }

    /* PLAY BUTTON */
    .play-btn {
        margin-top: 25px;
        padding: 12px 28px;
        background: #c59d29;
        color: black;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 8px;
        display: inline-block;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
    }

    .play-btn:hover {
        background: #e6b944;
        box-shadow: 0 0 10px gold;
    }

    footer {
        margin-top: 80px;
        padding: 20px;
        color: #8a793e;
        font-size: 0.9rem;
    }
</style>

</head>
<body>

<!-- NAVIGATION -->
<nav>
    <a href="index.html">Home</a>
    <a href="register.html">Register</a>
    <a href="music.html">Music</a>
    <a href="#">Our Systems</a>
    <a href="#">Contact</a>
</nav>

<div class="page-gap"></div>

<!-- MUSIC PLAYER CARD -->
<div class="player-box">

    <h1 style="color:#ffd95e;">FGM Music Player</h1>
    <p style="color:#e8d48c;">Premium Trading Ambience • Focus • Momentum</p>

    <!-- Rotating Coin -->
    <img src="assets/logos/fgm_coin_loader.png" id="coin" class="coin" />

    <!-- Audio Element -->
    <audio id="audio" src="assets/music/fgm_theme.mp3"></audio>

    <!-- Play Button -->
    <div id="playBtn" class="play-btn">PLAY</div>

</div>

<footer>
    © 2025 Forex Golden Momentum — Built by Felix G. Morandarte Jr.
</footer>

<script>
    const audio = document.getElementById("audio");
    const coin  = document.getElementById("coin");
    const btn   = document.getElementById("playBtn");

    let isPlaying = false;

    btn.onclick = function () {
        if (!isPlaying) {
            audio.play();
            coin.classList.add("spin");
            btn.innerText = "PAUSE";
        } else {
            audio.pause();
            coin.classList.remove("spin");
            btn.innerText = "PLAY";
        }
        isPlaying = !isPlaying;
    };

    // Stop rotation when audio ends
    audio.onended = function () {
        coin.classList.remove("spin");
        btn.innerText = "PLAY";
        isPlaying = false;
    };
</script>

</body>
</html>

